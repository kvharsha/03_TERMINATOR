<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer the following questions:"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- 5 Simple Questions with minHeight for better touch targets -->
    <EditText
        android:id="@+id/question1"
        android:hint="How are you feeling today?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/question2"
        android:hint="Did you sleep well last night?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/question3"
        android:hint="Have you exercised today?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/question4"
        android:hint="Have you eaten recently?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/question5"
        android:hint="Are you feeling overwhelmed?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stress &amp; Relaxation Levels"
        android:layout_marginBottom="16dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>
